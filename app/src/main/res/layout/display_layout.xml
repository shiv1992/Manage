<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d7d7d7"
    android:padding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frame">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Record"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"/>

    </RelativeLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:srcCompat="@color/colorAccent"
            android:layout_below="@+id/frame"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameTag"
            android:layout_toLeftOf="@+id/name"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/imageView"
            android:textColor="#000000"
            android:text="Name : "/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ageTag"
            android:layout_toLeftOf="@+id/age"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/name"
            android:textColor="#000000"
            android:text="Age : " />
        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/name"
            android:layout_below="@+id/name"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phoneTag"
            android:layout_toLeftOf="@+id/phone"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/age"
            android:textColor="#000000"
            android:text="Phone : " />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/age"
            android:layout_below="@+id/age"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateTag"
            android:layout_toLeftOf="@+id/date"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/phone"
            android:textColor="#000000"
            android:text="Date : " />
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/phone"
            android:layout_below="@+id/phone"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="#000000"/>

        <ProgressBar
            android:id="@+id/dataProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/dataProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dataProgressBar"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:text=""
            android:textColor="#000000"/>

</RelativeLayout>